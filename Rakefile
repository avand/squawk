require "jeweler"

Jeweler::Tasks.new do |gem|
  gem.name              = "squawk"
  gem.summary           = %Q{get a feel for what's happening in your app with protected tweets}
  gem.email             = "avand@avandamiri.com"
  gem.homepage          = "http://github.com/avand/squawk"
  gem.authors           = ["Avand Amiri"]
  gem.files             = FileList["[A-Z]*", "{generators,lib}/**/*"]

  gem.add_dependency("twitter", "0.9.8")
end
